// prisma/schema.prisma

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Player {
  id        String             @id @default(uuid())
  name      String             @unique
  pictureId String?            @unique
  picture   Picture?           @relation(fields: [pictureId], references: [id])
  entries   GamePlayerFaction[]

  @@map("players")
}

model Picture {
  id        String             @id @default(uuid())
  url       String             @unique
  player    Player?            @unique

  @@map("pictures")
}

model Faction {
  id      String               @id @default(uuid())
  name    String               @unique
  iconId  String?               @unique
  icon    Icon?                 @relation(fields: [iconId], references: [id])
  entries GamePlayerFaction[]

  @@map("factions")
}

model Icon {
  id      String               @id @default(uuid())
  url     String               @unique
  faction Faction?

  @@map("icons")
}

model Condition {
  id       String               @id @default(uuid())
  name     String               @unique
  games    Game[]

  @@map("conditions")
}

model League {
  id        String   @id @default(uuid())
  name      String
  startDate DateTime
  endDate   DateTime
  games     Game[]

  @@map("leagues")
}

model Game {
  id         String   @id @default(uuid())
  leagueId   String
  league     League   @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  gameDate   DateTime
  isLongGame Boolean  @default(false)
  winPoints  Int      @default(10)
  endRound   Int?
  entries    GamePlayerFaction[]

  @@index([leagueId, gameDate])
  @@map("games")
}

model GamePlayerFaction {
  id        String  @id @default(uuid())
  gameId    String
  playerId  String
  factionId String
  points    Int

  game    Game    @relation(fields: [gameId], references: [id], onDelete: Cascade)
  player  Player  @relation(fields: [playerId], references: [id], onDelete: Restrict)
  faction Faction @relation(fields: [factionId], references: [id], onDelete: Restrict)

  @@unique([gameId, playerId])
  @@unique([gameId, factionId])
  @@index([gameId])
  @@index([playerId])
  @@index([factionId])
  @@map("game_player_factions")
}
